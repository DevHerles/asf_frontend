<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
         <template id="contactuspage_inherit" inherit_id="website.contactus" name="Contáctenos"  active="True" customize_show="True">
            <xpath expr="//div[@id='wrap']" position="replace">
                <div id="wrap">
                    <!--page title start-->
                    <section class="page-title ptb-140" id="wrap-nav-bar">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <h2 class="text-bold primary-text">Contáctenos</h2>
                                    <ol class="breadcrumb">
                                        <li><a href="/">Inicio</a></li>
                                        <li class="active">Contáctenos</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!--page title end-->

                    <section id="contact" class="section-padding contact-form-wrapper bottom-20">
                        <div class="container">
                        <div class="row">

                            <div class="col-md-8">
                                <!-- <form name="contact-form" id="contactForm" class="clearfix" action="sendemail.php" method="POST"> -->
                                <form name="contact-form" id="contactForm" class="clearfix" t-attf-action="/page/sendemail{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash" role="form">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-field">
                                        <input type="text" name="name" class="validate" t-att-value="name" id="name" required="required" autocomplete="off" autofocus="autofocus" autocapitalize="off"/>
                                        <label for="name">Nombre</label>
                                        </div>

                                    </div><!-- /.col-md-6 -->

                                    <div class="col-md-6">
                                        <div class="input-field">
                                        <label class="sr-only" for="email">Email</label>
                                        <input type="email" name="email" class="validate" t-att-value="email" id="email" required="required" autocomplete="off" autofocus="autofocus" autocapitalize="off"/>
                                        <label for="email" data-error="wrong" data-success="right">Email</label>
                                        </div>
                                    </div><!-- /.col-md-6 -->
                                    </div><!-- /.row -->

                                    <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-field">
                                        <input type="tel" name="phone" class="validate" t-att-value="phone" id="phone" required="required" autocomplete="off" autofocus="autofocus" autocapitalize="off"/>
                                        <label for="phone">Número telefónico</label>
                                        </div>
                                    </div><!-- /.col-md-6 -->

                                    <div class="col-md-6">
                                        <div class="input-field">
                                        <input type="text" name="website" class="validate" t-att-value="website" id="website" required="required" autocomplete="off" autofocus="autofocus" autocapitalize="off"/>
                                        <label for="website">Su sitio web</label>
                                        </div>
                                    </div><!-- /.col-md-6 -->
                                    </div><!-- /.row -->

                                    <div class="input-field">
                                    <textarea name="message" class="materialize-textarea" t-att-value="message" id="message" required="required" autocomplete="off" autofocus="autofocus" autocapitalize="off"/>
                                    <label for="message">Mensaje</label>
                                    </div>

                                    <button type="submit" name="submit" class="waves-effect waves-light btn btn-orange right mt-30">Enviar mensaje</button>
                                </form>
                            </div><!-- /.col-md-8 -->

                            <div class="col-md-4 contact-info">

                                <address>
                                    <i class="material-icons brand-color">&#xE8B4;</i>
                                    <div class="address">
                                        Jr. León Velarde 631<br></br>
                                        Lince, Perú.
                                        <hr></hr>
                                    </div>

                                    <i class="material-icons brand-color">&#xE61C;</i>
                                    <div class="phone">
                                        Cellphone: (123) 456-7890
                                        <hr></hr>
                                    </div>

                                    <i class="material-icons brand-color">&#xE0B7;</i>
                                    <div class="mail">
                                        <p><a href="mailto:info@duplex.pe">info@duplex.pe</a><br></br>
                                        <a href="/">http://www.duplex.pe</a></p>
                                        <hr></hr>
                                    </div>
                                </address>
                            </div><!-- /.col-md-4 -->
                        </div><!-- /.row -->
                        </div>
                    </section>

                    <!-- map-section -->
                    <div id="map" class="height-350"></div>
                    <!-- /.map-section -->

                    <script>
                        var map;
                        function initMap() {
                            var duplex = {lat: -12.0835347, lng: -77.0433529};
                            var map = new google.maps.Map(document.getElementById('map'), {
                                scaleControl: true,
                                center: duplex,
                                zoom: 16
                            });

                            var infowindow = new google.maps.InfoWindow;
                            infowindow.setContent('<b>Duplex ERP</b>');

                            var marker = new google.maps.Marker({map: map, position: duplex});
                            marker.addListener('click', function() {
                            infowindow.open(map, marker);
                            });
                        }
                    </script>
                        
                    <script async="async" defer="defer" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC4syMXeAKc_mu9pNFqSmtzkQHom4f5f4g&amp;callback=initMap"
                        type="text/javascript"/>

                </div>
            </xpath>
            </template> 
    </data>
</odoo>