<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="login_layout" inherit_id="web.login_layout" name="Website Login Layout">
            <xpath expr="t" position="replace">
                <t t-call="website.layout">
                    <div id="wrap">
                        <section class="section-padding gray-bg">
                            <div class="container account-box">
								<!-- Logo box-->
								<div class="account-logo-box">
									<h2 class="text-uppercase text-center">
										<a href="index.html" class="text-success">
											<span><img src="/duplex_fe/static/assets/img/logo_light.png" alt="" height="28"/></span>
										</a>
									</h2>
								</div>

                                <div class="account-content">
                                    <form role="form" t-attf-action="/web/login{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="form-group mb-3">
											<label for="login" class="font-weight-medium">Email</label>
                                            <input class="email-input" type="text" name="login" t-att-value="login" id="login" required="required" autocomplete="off" autofocus="autofocus" autocapitalize="off"/>
                                        </div>
                                        <div class="input-container">
                                            <label for="password">Password</label>
											<input class="password-input" type="password" name="password" id="password" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                            <div class="bar"></div>
                                        </div>

                                        <p class="alert alert-danger" t-if="error">
                                            <t t-esc="error"/>
                                        </p>
                                        <p class="alert alert-success" t-if="message">
                                            <t t-esc="message"/>
                                        </p>
                                        
                                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                                        
                                        <div class="button-container">
                                            <a href="#." onclick="parentNode.parentNode.submit();" class="btn btn-lg btn-block waves-effect waves-light">Login</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </section>
                        
                        <!-- <section class="section-padding gray-bg">
                            <div class="container">
                                <div class="login-wrapper">
                                    <div class="card-wrapper"></div>
                                    <div class="card-wrapper">
                                        <h1 class="title">Login</h1>
                                        <div t-raw="0"/>
                                    </div>
                                </div>
                            </div>
                        </section> -->
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>