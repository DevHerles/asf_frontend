<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
    <template id="custom_body" inherit_id="web.layout" name="Custom Body">
        <!-- Assign an id & class -->
        <xpath expr="//body" position="attributes">
            <attribute name="id">top</attribute>
            <attribute name="class">has-header-search</attribute>
        </xpath>
    </template>

    <!-- info header -->
    <template id="info_header" inherit_id="website.layout" name="Custom Info Header">
        <xpath expr="//header" position="before">
            <!-- Top bar -->
            <div class="top-bar dark-bg lighten-2 visible-md visible-lg">
                <div class="container">
                    <div class="row">
                    <!-- Social Icon -->
                    <div class="col-md-6">
                        <!-- Social Icon -->
                        <ul class="list-inline social-top tt-animate btt">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <!-- <li><a href="#"><i class="fa fa-tumblr"></i></a></li>
                        <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                        <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="#"><i class="fa fa-rss"></i></a></li> -->
                        </ul>
                    </div>

                    <div class="col-md-6 text-right">
                        <ul class="topbar-cta no-margin">
                        <li class="mr-20">
                            <a><i class="material-icons mr-10">&#xE0B9;</i>info@duplex.pe</a>
                        </li>
                        <li>
                            <a><i class="material-icons mr-10">&#xE0CD;</i> +01 123 456 78</a>
                        </li>
                        </ul>
                    </div>
                    </div><!-- /.row -->
                </div><!-- /.container -->
            </div><!-- /.top-bar -->
        </xpath>
    </template>

    <!-- Customize header  -->
    <template id="layout_logo_show_" inherit_id="website.layout" customize_show="True" name="Show Logo">
        <xpath expr="//header//a[@class='navbar-brand logo']" position="replace">
        </xpath>
    </template>

    <template id="remove_sign_in" customize_show="True" inherit_id="website.layout" name="Show Sign In">
        <xpath expr="//ul[@id='top_menu']/li[last()]" position="replace">
        </xpath>
    </template>

    <template id="custom_header" inherit_id="website.layout" name="Custom Header">
        <!-- Assign an id & class -->
        <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
            <attribute name="id">header</attribute>
            <attribute name="class">tt-nav transparent-header nav-border-bottom</attribute>
        </xpath>

        <xpath expr="//div[@id='wrapwrap']/header/div[@class='navbar navbar-default navbar-static-top']" position="attributes">
            <attribute name="class">header-sticky light-header</attribute>
        </xpath>

        <xpath expr="//div[@id='wrapwrap']/header/div/div" position="inside">
            <div class="search-wrapper">
                <div class="search-trigger pull-right">
                    <div class='search-btn'></div>
                    <i class="material-icons">&#xE853;</i>
                </div>

                <!-- Modal Search Form -->
                <i class="search-close material-icons">&#xE5CD;</i>
                <div class="search-form-wrapper">
                    <form role="form" t-attf-action="/web/login{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="input-container">
                            <input type="text" name="login" t-att-value="login" id="login" required="required" autocomplete="off" autofocus="autofocus" autocapitalize="off"/>
                            <label for="login">Email</label>
                            <div class="bar"></div>
                        </div>
                        <div class="input-container">
                            <input type="password" name="password" id="password" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                            <label for="password">Password</label>
                            <div class="bar"></div>
                        </div>

                        <p class="alert alert-danger" t-if="error">
                            <t t-esc="error"/>
                        </p>
                        <p class="alert alert-success" t-if="message">
                            <t t-esc="message"/>
                        </p>
                        
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        
                        <div class="button-container">
                            <a href="#." onclick="parentNode.parentNode.submit();" class="btn btn-lg btn-block waves-effect waves-light">Login</a>
                        </div>
                    </form>
                </div>
            </div><!-- /.search-wrapper -->
        </xpath>

        <xpath expr="//div[@id='wrapwrap']/header/div/div/div[2]" position="attributes">
            <attribute name="id">materialize-menu</attribute>
            <attribute name="class">menuzord</attribute>
        </xpath>

        <xpath expr="//ul[@id='top_menu']" position="attributes">
            <attribute name="class">menuzord-menu pull-right light menuzord-indented scrollable</attribute>
            <attribute name="style">max-height: 400px;</attribute>
        </xpath>

        <xpath expr="//ul[@id='top_menu']" position="before">
            <a href="/" class="logo-brand">
                <img class="logo-dark" src="/duplex_fe/static/assets/img/aranda-logo-full.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                <img class="logo-light" src="/duplex_fe/static/assets/img/aranda-logo-full-white.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
            </a>
        </xpath>
    </template>

    <template id="inherit_layout_footer_copyright" inherit_id="website.layout" name="Footer Copyright">
        <xpath expr="//footer/div[@class='container mt16 mb8']" position="replace">
        </xpath>
    </template>
  </data>
</odoo>