<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="inherit_footer_default" inherit_id="website.footer_custom" customize_show="True" name="Automatic Footer">
            <xpath expr="//div[@id='footer']" position="replace">
                <footer class="footer footer-one">
                    <div class="primary-footer brand-bg">
                        <div class="container">
                            <a href="#top" class="page-scroll btn-floating btn-large pink back-top waves-effect waves-light" data-section="#top">
                            <i class="material-icons">&#xE316;</i>
                            </a>

                            <div class="row">
                                <div class="col-md-3 widget clearfix">
                                    <!-- <a href="/" class="logo-brand">
                                        <img src="duplex_fe/static/assets/img/aranda-logo-full-white.png" alt="logo" />
                                    </a> -->
                                    <!-- <h2 class="white-text">About <span t-field="res_company.name" /></h2> -->
                                    <h2 class="white-text">Condominium ERP</h2>
                                    <p>
                                        El primer ERP en línea para la administración de Condominios.
                                    </p>

                                    <address>
                                        <i class="material-icons brand-color">&#xE8B4;</i>
                                        <div class="address">
                                            Jr. León Velarde 631<br></br>
                                            Lince, Perú.
                                        </div>

                                        <i class="material-icons brand-color">&#xE61C;</i>
                                        
                                        <div class="phone">
                                            Celular: (123) 456-7890
                                        </div>

                                        <i class="material-icons brand-color">&#xE0B7;</i>
                                        <div class="mail">
                                            <p><a href="mailto:#">contacto@arandasf.com</a><br></br>
                                            <a href="#">www.arandasf.com</a></p>
                                        </div>
                                    </address>

                                    <ul class="social-link tt-animate ltr">
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-tumblr"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                    <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                    <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                    <li><a href="#"><i class="fa fa-rss"></i></a></li>
                                    </ul>
                                </div><!-- /.col-md-3 -->

                                
                                <div class="col-md-3 widget">
                                    <h2 class="white-text">Imporant links</h2>

                                    <ul class="footer-list">
                                        <li><a href="#">About us</a></li>
                                        <li><a href="#">Services</a></li>
                                        <li><a href="#">Terms &amp; Condition</a></li>
                                        <li><a href="#">Privacy Policy</a></li>
                                        <li><a href="#">Contact Us</a></li>
                                    </ul>
                                </div><!-- /.col-md-3 -->

                                <div class="col-md-3 widget">
                                    <h2 class="white-text">Twitter Feed</h2>

                                    <div id="twitterfeed" class="twitter-widget-wrapper">
                                        <!-- html code injected via javascript -->
                                        <a class="twitter-timeline"  href="https://twitter.com/hashtag/odoo" data-widget-id="934678562178605056">#odoo Tweets</a>
                                    </div>
                                </div><!-- /.col-md-3 -->


                                <div class="col-md-3 widget">
                                    <h2 class="white-text">News Letter</h2>
                                    <p>
                                        Suscríbete para recibir las últimas Noticias de nuestro ERP para condominios.
                                    </p>
                                    <form>
                                        <div class="form-group clearfix">
                                            <label class="sr-only" for="subscribe">Email address</label>
                                            <input type="email" class="form-control" id="subscribe" placeholder="Email address"/>
                                            <button type="submit" class="tt-animate ltr"><i class="fa fa-long-arrow-right"></i></button>
                                        </div>
                                    </form>
                                </div><!-- /.col-md-3 -->
                            </div><!-- /.row -->
                        </div><!-- /.container -->
                    </div><!-- /.primary-footer -->

                    <div class="secondary-footer brand-bg darken-2">
                        <div class="container">
                            <span class="copy-text">Copyright © 2017 <a href="/"><span t-field="res_company.name" /></a>  |  All Rights Reserved  |  Designed By <a href="/"><span t-field="res_company.name" /></a></span>
                        </div><!-- /.container -->
                    </div><!-- /.secondary-footer -->
                </footer>


                <!-- Preloader -->
                <div id="preloader">
                <div class="preloader-position"> 
                    <img src="/duplex_fe/static/assets/img/aranda-logo-ico.png" alt="logo" />
                    <div class="progress">
                    <div class="indeterminate"></div>
                    </div>
                </div>
                </div>
                <!-- End Preloader -->  

            </xpath>
        </template>
  </data>
</odoo>